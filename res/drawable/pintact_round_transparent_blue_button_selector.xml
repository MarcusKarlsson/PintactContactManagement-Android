<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">   
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <solid android:color="@color/PINTACT_ORANGE_COLOR" />
            <stroke android:width="@dimen/PINTACT_LINE_HEIGHT" android:color="@color/PINTACT_BLUE_COLOR" />
            <corners android:radius="4dp" />
		</shape>
    </item> 
    <item> 
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <solid android:color="@color/PINTACT_TRANSPARENT_COLOR" />
            <stroke android:width="@dimen/PINTACT_LINE_HEIGHT" android:color="@color/PINTACT_BLUE_COLOR" />
            <corners android:radius="4dp" />
		</shape>
    </item><!-- default -->
</selector>
