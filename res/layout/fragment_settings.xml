<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/PINTACT_VIEW_BG_COLOR"
    tools:context="com.pinplanet.pintact.setting.FragmentSettings">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pintact_white_rect_with_2_lines"
        android:padding="@dimen/PINTACT_ITEM_PADDING">


        <LinearLayout
            android:id="@+id/settingButtonAbout"
            android:orientation="horizontal"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/pintact_white_rect_with_1_bottom_line"
            android:gravity="center_vertical"
            android:padding="@dimen/PINTACT_ITEM_PADDING">

            <com.pinplanet.pintact.utility.TextViewTypeFace
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/PINTACT_ITEM_PADDING"
                android:text="@string/set_about"
                android:textColor="@color/PINTACT_TEXT_LABEL_COLOR"
                android:textSize="@dimen/TEXT_SIZE_LARGE"
                android:textStyle="normal"
                app:FontStyles="normal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingButtonSort"
            android:orientation="horizontal"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/pintact_white_rect_with_1_bottom_line"
            android:gravity="center_vertical"
            android:padding="@dimen/PINTACT_ITEM_PADDING">

            <com.pinplanet.pintact.utility.TextViewTypeFace
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/PINTACT_ITEM_PADDING"
                android:text="@string/set_sort"
                android:textColor="@color/PINTACT_TEXT_LABEL_COLOR"
                android:textSize="@dimen/TEXT_SIZE_LARGE"
                android:textStyle="normal"
                app:FontStyles="normal"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingButtonSearch"
            android:orientation="horizontal"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/pintact_white_rect_with_1_bottom_line"
            android:gravity="center_vertical"
            android:padding="@dimen/PINTACT_ITEM_PADDING">

            <com.pinplanet.pintact.utility.TextViewTypeFace
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/PINTACT_ITEM_PADDING"
                android:text="@string/set_search_setting"
                android:textColor="@color/PINTACT_TEXT_LABEL_COLOR"
                android:textSize="@dimen/TEXT_SIZE_LARGE"
                android:textStyle="normal"
                app:FontStyles="normal"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>
