<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/label_action_view"
    android:background="@color/PINTACT_WHITE_COLOR"
    android:orientation="vertical"
    android:divider="@drawable/divider"
    android:showDividers="middle"
    >
    
    <TextView
            android:id="@+id/label_email"
            style="@style/DialogButtonStyle"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="@dimen/im_padding_10dp"
            android:text="@string/label_email_label"
            android:textSize="@dimen/csl_small"
            android:textStyle="normal"
            android:textColor="@color/PINTACT_BLACK_COLOR"
            android:layout_width="match_parent" />
    
    <TextView
            android:id="@+id/label_sms"
            style="@style/DialogButtonStyle"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="@dimen/im_padding_10dp"
            android:text="@string/label_sms_label"
            android:textSize="@dimen/csl_small"
            android:textStyle="normal"
            android:textColor="@color/PINTACT_BLACK_COLOR"
            android:layout_width="match_parent" />
    
</LinearLayout>