    <LinearLayout
        android:id="@+id/itemLinearLayout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="@dimen/PINTACT_MARGIN_VIEW_HORIZONZAL"
        android:layout_marginRight="@dimen/PINTACT_MARGIN_VIEW_HORIZONZAL"
        android:layout_marginTop="@dimen/PINTACT_MARGIN_VIEW_VERTICAL"
        android:layout_marginBottom="@dimen/PINTACT_MARGIN_VIEW_VERTICAL"
        android:background="@drawable/pintact_round_orange_rect"
        android:gravity="center"
        android:padding="@dimen/PINTACT_LEFT_DECK_ITEM_HORIZONTAL_MARGIN">

        <com.pinplanet.pintact.utility.TextViewTypeFace
            android:text="@string/pcs_nice"
            android:textColor="@color/PINTACT_WHITE_COLOR"
            android:textSize="@dimen/TEXT_SIZE_XTRA_LARGE"
            app:FontStyles="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.pinplanet.pintact.utility.TextViewTypeFace
            android:text="@string/pcs_nice_next"
            android:textColor="@color/PINTACT_WHITE_COLOR"
            android:textSize="@dimen/TEXT_SIZE_XTRA_LARGE"
            app:FontStyles="light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/PINTACT_MARGIN_ITEM_VERTICAL" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/PINTACT_LINE_HEIGHT"
            android:background="@color/PINTACT_WHITE_COLOR"
            android:layout_marginTop="@dimen/PINTACT_MARGIN_ITEM_VERTICAL"
            android:layout_marginBottom="@dimen/PINTACT_MARGIN_ITEM_VERTICAL"
            android:layout_marginLeft="@dimen/PINTACT_MARGIN_VIEW_VERTICAL"
            android:layout_marginRight="@dimen/PINTACT_MARGIN_VIEW_VERTICAL"
            />

        <com.pinplanet.pintact.utility.TextViewTypeFace
            android:text="@string/pcs_desc_first"
            android:textColor="@color/PINTACT_WHITE_COLOR"
            android:textSize="@dimen/TEXT_SIZE_SMALL"
            app:FontStyles="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/PINTACT_MARGIN_ITEM_VERTICAL" />

        <com.pinplanet.pintact.utility.TextViewTypeFace
            android:text="@string/pcs_desc_second"
            android:textColor="@color/PINTACT_WHITE_COLOR"
            android:textSize="@dimen/TEXT_SIZE_SMALL"
            app:FontStyles="bold|italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/PINTACT_MARGIN_ITEM_VERTICAL" />
    </LinearLayout>

    <com.pinplanet.pintact.utility.TextViewTypeFace
        android:layout_below="@+id/itemLinearLayout"
        android:layout_centerInParent="true"
        android:text="@string/NEXT"
        android:clickable="true"
        android:onClick="updateSearchProfile"
        android:drawableRight="@drawable/arrow_blue"
        android:textColor="@color/PINTACT_BLUE_COLOR"
        android:textSize="@dimen/TEXT_SIZE_NORMAL"
        app:FontStyles="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/PINTACT_MARGIN_VIEW_VERTICAL" />

</RelativeLayout>
